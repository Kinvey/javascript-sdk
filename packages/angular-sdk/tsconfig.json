{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "lib": ["dom"],
    "outDir": "lib"
  },
  "exclude": ["node_modules", "test"],
  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit": false,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  }
}
