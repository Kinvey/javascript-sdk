{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "umd",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "preserveConstEnums": true,
        "removeComments": true,
        "skipLibCheck": true,
        "target": "es5"
    },
    "compileOnSave": false,
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}